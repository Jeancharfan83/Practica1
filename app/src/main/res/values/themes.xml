<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RecetasApp" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rose</item>
        <item name="colorPrimaryVariant">@color/rose_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/Theme.Recipe.Actionbar</item>

        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.Recipe.Actionbar" parent="Widget.Material3.Light.ActionBar.Solid" >
        <item name="android:textColor">#E91E63</item>
        <item name="android:background">#E91E63</item>
    </style>
</resources>